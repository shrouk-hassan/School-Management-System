
@{
    ViewBag.Title = "Index";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Exam Marks</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            Name
                        </th>
                        <th>
                            Subject
                        </th>
                        <th>
                            Obtain Marks
                        </th>
                        <th>
                            Total Marks
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in  ViewBag.Message)
                    {
                        <tr>
                            <td>
                                @item.Name
                            </td>
                            <td>
                                @item.cat_name
                            </td>
                            <td>
                                @item.ObtainMark
                            </td>
                            <td>
                                @item.TotalMark
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>