<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CV Generator</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style type="text/css">
        .field-validation-error {
            background-color: #e85555;
            color: white;
            padding: 2px 9px;
            border-radius: 9px;
            font-size: 12px;
        }
        .container {
            margin-top: -53px;
        }
    </style>
</head>
<body class="container">

    <div class="container body-content">


        @{Html.RenderAction("WorkExperiencePartial", "Resume");
        }
        @section script{
            <script type="text/javascript">


                $('#AddOrUpdateExperience'), on('click', function () {
                    var serializaModel = {

                        IDEdu: $('#EmployeeWorkExperienceID').val,
                        InstituteUniversity: $('#Company').val(),
                        TitleOfDiploma: $('#Title').val(),
                        Degree: $('#Country').val(),
                        FromYear: $('#FromYear').val(),
                        ToYear: $('#ToYear').val(),
                        Country: $('#Description').val()
                    };

                    console.log(JSON.stringify(serializaModel));

                    $.ajax({
                        url: 'Url.Action("AddOrUpdateExperience","Resume")',

                        type: 'POST',
                        data: { workExperience: serializaModel },
                        success: function (response) {
                            alert(response.data);
                        }, error: function (error) {
                            alert(error.data)
                        }
                    });
                });
                                     });
            </script>
            @Scripts.Render("~/bundles/jqueryval")
        }

        <hr />
        <footer>
            <p>Design by M&R&SH</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @*@RenderSection("scripts", required: false)*@

    <script type="text/javascript">
    $(function () {
            $('#datetimepicker1').datetimepicker();
            $('#datetimepicker2').datetimepicker();
        });</script>

</body>
</html>
